{
	"compileOnSave": false,
	"compilerOptions": {
		"importHelpers": true,
		"outDir": "./dist/moment",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"baseUrl": "src",
		"paths": {
			"@core/*": ["app/core/*"],
			"@shared/*": ["app/shared/*"],
			"@env/*": ["environments/*"]
		},
		"module": "esnext"
	}
}
